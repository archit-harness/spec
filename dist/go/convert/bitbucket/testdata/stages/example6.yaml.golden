stages:
- name: build
  spec:
    steps:
    - name: Build app
      spec:
        run: sh ./build-app.sh
      type: run
    - name: Run unit tests
      spec:
        run: sh ./run-tests.sh
      type: run
  type: ci
- name: build
  spec:
    steps:
    - name: plugin
      spec:
        image: atlassian/slack-notify:latest
        with:
          MESSAGE: Hello, Slack!!
          PRETEXT: Hello, Slack!
          WEBHOOK_URL: $SLACK_WEBHOOK
      type: plugin
  type: ci
version: 1