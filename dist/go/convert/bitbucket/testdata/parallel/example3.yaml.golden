stages:
- name: build
  spec:
    steps:
    - name: Build
      spec:
        run: ./build.sh
      type: run
    - name: parallel
      spec:
        steps:
        - name: Integration 1
          spec:
            run: ./integration-tests.sh --batch 1
          type: run
        - name: Integration 2
          spec:
            run: ./integration-tests.sh --batch 2
          type: run
      type: parallel
  type: ci
version: 1