stages:
- name: build
  spec:
    steps:
    - name: Step using the Bash image
      spec:
        image: bash:latest
        run: bash --version
      type: run
    - name: Step using the default Bitbucket Pipelines image
      spec:
        image: atlassian/default-image:latest
        run: echo "Hello, World from the default Pipelines image"
      type: run
  type: ci
version: 1